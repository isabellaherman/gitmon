// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  image         String?

  // GitHub info
  githubUsername    String?
  githubId          Int?
  githubBio         String?
  githubLocation    String?
  githubCompany     String?
  githubBlog        String?
  githubTwitter     String?
  githubFollowers   Int      @default(0)
  githubFollowing   Int      @default(0)
  githubCreatedAt   DateTime?
  avgCommitsPerWeek Float    @default(0)

  // GitMon specific fields
  selectedMonsterId Int?
  gitmonSelectedAt  DateTime?
  level             Int     @default(1)
  xp                Int     @default(0)
  onboardingCompleted Boolean @default(false)

  // XP tracking
  lastXpUpdate      DateTime @default(now())
  dailyXp           Int      @default(0)
  weeklyXp          Int      @default(0)
  currentStreak     Int      @default(0)
  longestStreak     Int      @default(0)

  // GitHub stats cache
  totalCommits      Int      @default(0)
  totalPRs          Int      @default(0)
  totalStars        Int      @default(0)
  totalRepos        Int      @default(0)
  languagesUsed     String?  // JSON string of languages array

  accounts Account[]
  sessions Session[]
  activities XpActivity[]

  @@map("users")
}

model XpActivity {
  id          String   @id @default(cuid())
  userId      String
  type        String   // "commit", "pr", "star", "fork", etc.
  amount      Int      // XP earned
  source      String?  // repo name or source
  metadata    Json?    // additional data
  earnedAt    DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("xp_activities")
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}
