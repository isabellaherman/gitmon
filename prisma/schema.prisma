generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?
  user              User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model User {
  id                  String             @id @default(cuid())
  name                String?
  email               String?            @unique
  emailVerified       DateTime?
  image               String?
  githubUsername      String?
  githubId            Int?
  githubBio           String?
  githubLocation      String?
  githubCompany       String?
  githubBlog          String?
  githubTwitter       String?
  githubFollowers     Int                @default(0)
  githubFollowing     Int                @default(0)
  githubCreatedAt     DateTime?
  avgCommitsPerWeek   Float              @default(0)
  selectedMonsterId   Int?
  gitmonSelectedAt    DateTime?
  level               Int                @default(1)
  xp                  Int                @default(0)
  onboardingCompleted Boolean            @default(false)
  lastXpUpdate        DateTime           @default(now())
  dailyXp             Int                @default(0)
  weeklyXp            Int                @default(0)
  currentStreak       Int                @default(0)
  longestStreak       Int                @default(0)
  totalCommits        Int                @default(0)
  totalPRs            Int                @default(0)
  totalStars          Int                @default(0)
  totalRepos          Int                @default(0)
  languagesUsed       String?
  guildId             String?
  isGitMonContributor Boolean            @default(false)
  weekStartDate       DateTime?
  allTimeRank         Int?
  rankUpdatedAt       DateTime?
  weeklyRank          Int?
  accounts            Account[]
  sessions            Session[]
  eventParticipations EventParticipant[]
  userLinks           UserLink[]
  activities          XpActivity[]

  @@map("users")
}

model XpActivity {
  id       String   @id @default(cuid())
  userId   String
  type     String
  amount   Int
  source   String?
  metadata Json?
  earnedAt DateTime @default(now())
  user     User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("xp_activities")
}

model EventParticipant {
  id             String    @id @default(cuid())
  userId         String
  eventId        String
  githubUsername String?
  joinedAt       DateTime  @default(now())
  lastSyncAt     DateTime?
  user           User      @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, eventId])
  @@map("event_participants")
}

model EventCommit {
  id          String   @id @default(cuid())
  eventId     String
  username    String
  sha         String
  message     String
  repoName    String
  committedAt DateTime
  createdAt   DateTime @default(now())

  @@unique([eventId, sha])
  @@index([eventId, committedAt])
  @@map("event_commits")
}

model UserLink {
  id        String   @id @default(cuid())
  userId    String
  title     String   @db.VarChar(50)
  url       String   @db.VarChar(500)
  order     Int      @db.SmallInt
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, order])
  @@map("user_links")
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}
